<MyLayout>:
    BoxLayout:
        orientation: 'vertical'
        size: root.size
        # padding: 30 # Снаружи элементов
        # spacing: 20 # Внутри между элементами

        TextInput:
            id: calc_input
            text: '0'
            halign: 'right' # Расположение текста в боксе
            font_size: 65
            size_hint: (1, 0.15)
        GridLayout:
            cols: 4
            rows: 5

            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: ''
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: '<<'
                on_press: root.press_back()
            Button:
                size_hint: (0.2, 0.2)
                text: 'C'
                on_press: root.press_C()
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: '/'
                on_press: root.add_sign(self.text)

            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: '7'
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.button_press(self.text)
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: '8'
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.button_press(self.text)
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: '9'
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.button_press(self.text)
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: '*'
                on_press: root.add_sign(self.text)

            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: '4'
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.button_press(self.text)
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: '5'
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.button_press(self.text)
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: '6'
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.button_press(self.text)
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: '–'
                on_press: root.add_sign(self.text)

            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: '1'
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.button_press(self.text)
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: '2'
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.button_press(self.text)
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: '3'
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.button_press(self.text)
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: '+'
                on_press: root.add_sign(self.text)

            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: '+/-'
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.press_plusminus()
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: '0'
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.button_press(self.text)
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: '.'
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.press_point()
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: '='
                on_press: root.equals()
